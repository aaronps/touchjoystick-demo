<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aaronps.touchjoystickdemo.MainActivity">

    <TextView
        android:layout_height="wrap_content"
        android:text="Vertical Value"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3"
        android:layout_width="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horizontal Value"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:id="@+id/horizontal_value"
        android:paddingEnd="100px"
        android:paddingRight="100px"
        android:layout_below="@+id/vertical_value"
        android:layout_toRightOf="@+id/textView4"
        android:layout_alignRight="@+id/vertical_value"
        android:layout_alignEnd="@+id/vertical_value"
        android:textAlignment="textEnd"
        android:gravity="end"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Touch and check the logs"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:id="@+id/vertical_value"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:paddingEnd="100px"
        android:paddingRight="100px"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />
</RelativeLayout>
